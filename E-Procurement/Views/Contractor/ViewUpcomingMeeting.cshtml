@model  IEnumerable<E_Procurement.Models.ActiveContracts>
@{
    ViewBag.Title = "ViewUpcomingMeeting";
    int tenderCounter = 0;
    Layout = "~/Views/Shared/_ContractorLayout.cshtml";
}
<div class="content container-fluid">
    <div class="row">
        <div class="col-xs-4" style="width:100%">
            <h4 class="page-title"><strong><u>Project Meeting Details</u></strong></h4>
        </div>
    </div>
    <ul class="nav nav-tabs">
        <li class="active" style="background-color:#D3D3D3">
            <a href="#ongoing_project_works" data-toggle="tab"><p style="color:black"><strong>Project Meeting Summary</strong></p> </a>
        </li>
        <li  style="background-color:#D3D3D3">
            <a href="#ongoing_project_works" data-toggle="tab"><p style="color:black"><strong>Project Meeting Attendance</strong></p> </a>
        </li>
        <li style="background-color:#D3D3D3">
            <a href="#completed_project_works" data-toggle="tab"><p style="color:black"><strong>Project Meeting Agenda</strong> </p></a>
        </li>
        <li style="background-color:#D3D3D3">
            <a href="#completed_project_works" data-toggle="tab"><p style="color:black"><strong>Project Meeting Action Points</strong> </p></a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade active in" id="ongoing_project_works">
            <p>The following is the Project Meeting Summary</p>
            <div class="row filter-row">
                <div class="col-sm-4 col-xs-6">
                    <div class="form-group form-focus">
                        <label class="control-label">Search by Regions</label>
                        <input type="text" class="form-control floating" />
                    </div>
                </div>
                <div class="col-sm-4 col-xs-6">
                    <div class="form-group form-focus select-focus">
                        <label class="control-label">Search by Contract No</label>
                        <input type="text" class="form-control floating" />
                    </div>
                </div>
                <div class="col-sm-4 col-xs-6">
                    <a href="#" class="btn btn-success btn-block"> Search </a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-striped custom-table datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Contract Ref No.</th>
                                    <th>Description</th>
                                    <th>Region</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Contract Value(Ksh)</th>
                                    <th>Project Commenced</th>
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    tenderCounter++;
                                    <tr>
                                        <td>
                                            @tenderCounter
                                        </td>
                                        <td>
                                            <a href=""><strong>@Html.DisplayFor(modelItem => item.Code)</strong></a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tender_Name)

                                        </td>
                                        <td>
                                            Nairobi

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Submission_End_Date)

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Document_Date)
                                        </td>
                                        <td>
                                            17,000,000,000,000
                                        </td>
                                        <td>
                                            Yes
                                        </td>
                                        <td>
                                            <a href="" data-toggle="modal" class="btn btn-success"><i class="fa fa-eye m-r-10"></i> View</a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="completed_project_works">
            <p>The following are the Drafts's Works Executions Plans</p>
            <div class="row filter-row">
                <div class="col-sm-4 col-xs-6">
                    <div class="form-group form-focus">
                        <label class="control-label">Search by Regions</label>
                        <input type="text" class="form-control floating" />
                    </div>
                </div>
                <div class="col-sm-4 col-xs-6">
                    <div class="form-group form-focus select-focus">
                        <label class="control-label">Search by Contract No</label>
                        <input type="text" class="form-control floating" />
                    </div>
                </div>
                <div class="col-sm-4 col-xs-6">
                    <a href="#" class="btn btn-success btn-block"> Search </a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-striped custom-table datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Contract Ref No.</th>
                                    <th>Description</th>
                                    <th>Region</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Contract Value(Ksh)</th>
                                    <th>Project Commenced</th>
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    tenderCounter++;
                                    <tr>
                                        <td>
                                            @tenderCounter
                                        </td>
                                        <td>
                                            <a href=""><strong>@Html.DisplayFor(modelItem => item.Code)</strong></a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tender_Name)

                                        </td>
                                        <td>
                                            Nairobi

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Submission_End_Date)

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Document_Date)
                                        </td>
                                        <td>
                                            17,000,000,000,000
                                        </td>
                                        <td>
                                            Yes
                                        </td>
                                        <td>
                                            <a href="" data-toggle="modal" class="btn btn-success"><i class="fa fa-eye m-r-10"></i> View</a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

