@model  IEnumerable<E_Procurement.Models.ActiveContracts>
@{
    Layout = "~/Views/Shared/_ContractorLayout.cshtml";
    ViewBag.Title = "IssuedCorrectiveOrders";
    int tendersCounter = 0;
}
<div class="content container-fluid">
    <div class="row">

        <div class="col-xs-4" style="width:100%">
            <h4 class="page-title">All Issued Corrective Orders</h4>
        </div>
    </div>
    <div class="col-xs-4" style="width:100%">
        <h4 class="page-title"><u>Welcome to i-RMS Systems</u></h4>
    </div>
    <h5><u>Open Tender Notices</u></h5>
    <div class="row filter-row">
        <div class="col-sm-4 col-xs-6">
            <div class="form-group form-focus">
                <label class="control-label">Search by  Procurement Method</label>
                <input type="text" class="form-control floating" />
            </div>
        </div>
        <div class="col-sm-4 col-xs-6">
            <div class="form-group form-focus">
                <label class="control-label">Search by Regions</label>
                <input type="text" class="form-control floating" />
            </div>
        </div>
        <div class="col-sm-4 col-xs-6">
            <div class="form-group form-focus select-focus">
                <label class="control-label">Search by Product Group</label>
                <input type="text" class="form-control floating" />
            </div>
        </div>
        <div class="col-sm-4 col-xs-6">
            <div class="form-group form-focus select-focus">
                <label class="control-label">Search by Work Category</label>
                <input type="text" class="form-control floating" />
            </div>
        </div>
        <div class="col-sm-4 col-xs-6">
            <div class="form-group form-focus select-focus">
                <label class="control-label">Search by Expiry Date</label>
                <input type="text" class="form-control floating" />
            </div>
        </div>
        <div class="col-sm-4 col-xs-6">
            <a href="#" class="btn btn-success btn-block"> Search </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped custom-table datatable">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Notice No.</th>
                            <th>External Document No.</th>
                            <th>Tender Name</th>
                            <th>Procurement Method</th>
                            <th>Submission Start Date</th>
                            <th>Submission End Date</th>
                            <th>Project ID</th>
                            <th>Work Category</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            tendersCounter++;
                            <tr>
                                <td>
                                    @tendersCounter
                                </td>
                                <td>
                                    <a href=""><strong>@Html.DisplayFor(modelItem => item.Code)</strong></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.External_Document_No)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tender_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Procurement_Method)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Submission_Start_Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Submission_End_Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Project_ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Works_Category)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


