@model  IEnumerable<E_Procurement.Models.FRISpecificRequirementModel>
@{
    ViewBag.Title = "ViewRFISpecificRequirement";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int Counter = 0;
}
<div class="content container-fluid">
    <div class="panel panel-body">
        <div class="row">
            <div class="card">
                <div class="card-header text-center" data-background-color="darkgreen">
                    <h6><i><strong>e-Prequalification </strong></i></h6>
                </div><br />
            </div>
        </div>
        <div class="row">
            <div class="panel panel-heading" style="background-color:gray">
                <h5 class="panel-title">Speicific Category Requirements </h5>
            </div>
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped custom-table datatable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Code.</th>
                                <th>Requirement Code</th>
                                <th>Description</th>
                                <th>Requirement Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                Counter++;
                                <tr>
                                    <td>
                                        @Counter
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Requirement_Code)
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Requirement_Type)
                                    <td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-5 col-md-8">
                        <a href="/Home/RFIResponse" class="btn btn-primary pull-left"><i class="fas fa fa-angle-left"></i> &nbsp;Back </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

