@model  IEnumerable<E_Procurement.Models.TenderModel>
@{
    ViewBag.Title = "AnnouncementsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content container-fluid">
    <div class="row">
        <div class="card">
            <div class="card-header text-center" data-background-color="darkgreen">
                <h5 class="title"><i>Quick Announcements</i></h5>
            </div>
            <div class="card-content">
                <p>
                    Please take note of the following quick announcements (Detailed clarification can be obtained from our  Procurement Department)
                </p>
                <div class="row filter-row">
                    <div class="col-sm-3 col-xs-6">
                        <div class="form-group form-focus">
                            <label class="control-label"> Search by Region</label>
                            <input type="text" class="form-control floating" />
                        </div>
                    </div>
                    <div class="col-sm-3 col-xs-6">
                        <div class="form-group form-focus">
                            <label class="control-label">Search by Tender Notice</label>
                            <input type="text" class="form-control floating" />
                        </div>
                    </div>
                    <div class="col-sm-3 col-xs-6">
                        <div class="form-group form-focus select-focus">
                            <label class="control-label">Search by Announcement Type</label>
                            <input type="text" class="form-control floating" />
                        </div>
                    </div>
                    <div class="col-sm-3 col-xs-6">
                        <a href="#" class="btn btn-success btn-block"> Search </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped custom-table datatable">
                                <thead>
                                    <tr>
                                        <th>Notice No.</th>
                                        <th>External Document No.</th>
                                        <th>Tender Name</th>
                                        <th>Procurement Method</th>
                                        <th>Submission Start Date</th>
                                        <th>Submission End Date</th>
                                        <th>Project ID</th>
                                        <th>Work Category</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Code)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.External_Document_No)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Tender_Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Procurement_Method)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Submission_Start_Date)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Submission_End_Date)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Project_ID)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Works_Category)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>