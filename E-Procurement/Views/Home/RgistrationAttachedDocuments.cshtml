<div id="declaration_form" class="modal custom-modal fade" role="dialog">
    @foreach (IFPRequestsModel invitation in Model.Response)
    {
        <iframe style="width:90%; height:50%" src="@Url.Action("DisplayPdfInIframe", "Home", new { PrequalificationNumber = @invitation.PrequalificationNo })"></iframe>
    }
    <div class="modal-dialog" style="width:96%; height:50%">
        <div class="modal-content modal-md" style="width:96%; height:50%">
            <div class="modal-header">
                <h3 class="modal-title"><strong>Vendor Declaration</strong></h3>
            </div>
            <div class="col-sm-6" style="display:none">
                <div class="form-group">
                    <label class="control-label">PrequalificationNo: <span class="text-danger">*</span></label>
                    <input class="form-control " type="text" id="preapplicationo" name="preapplicationo" value="@ViewBag.prequalificationNo" readonly>
                </div>
            </div>
            <div class="modal-body card-box">
                <p>
                    I certify that the information I am about to provided is true and complete to
                    the best of my knowledge. I am aware that this self declaration statement is
                    subject to review and verification and if such information has been falsified I
                    may be terminated from the Registration Process for fraud
                    and/or perjury
                </p>
                <br />
                <div class="invalid-feedback">
                    You must agree before submitting.<a href="~/Downloads/Terms and Conditions.pdf">Read Terms & Condition</a>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input type="checkbox" name="termsandconditions" id="termsandconditions"> <span class="text-danger">*</span><label class="control-label">Accept Terms and Conditions</label>

                    </div>
                </div>
                <br />
                <hr />
                <div class="m-t-20">
                    <center>
                        <a href="#" class="btn btn-default" data-dismiss="modal">Close</a>
                        <button type="submit" class="btn btn-success btn_PrequalifiationsDeclaration" id="btn_PrequalifiationsDeclaration" name="btn_PrequalifiationsDeclaration">Submit Prequalification</button>
                    </center>
                </div>
            </div>
        </div>
    </div>
