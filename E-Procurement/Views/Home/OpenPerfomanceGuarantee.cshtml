
@model  IEnumerable<E_Procurement.Models.performanceGuarantee>
@{
    ViewBag.Title = "OpenPerfomanceGuarantee";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int contractCounter = 0;
}
<div class="content container-fluid">
    <div class="row">
        <div class="card">
            <div class="card-header text-center" data-background-color="darkgreen">
                <h5 class="title"><i>Performance Guarantee </i></h5>
            </div>
        </div>
    </div>
    <div class="row" style="background-color:#D3D3D3">
        <div class="col-xs-8 text-right m-b-30">
            <a href="@Url.Action("Guarantee", "Home")" class="btn btn-primary pull-right rounded"><i class="fa fa-plus"></i>Apply for Performance Guarantee</a>
        </div>
    </div>
    <p>
       Performance Guarantee
    </p>
    <div class="row filter-row">
        <div class="col-sm-3  col-xs-6">
            <div class="form-group form-focus">
                <label class="control-label"> Search by Region</label>
                <input type="text" class="form-control floating" />
            </div>
        </div>
        <div class="col-sm-3  col-xs-6">
            <div class="form-group form-focus">
                <label class="control-label">Search by Tender Notice</label>
                <input type="text" class="form-control floating" />
            </div>
        </div>
        <div class="col-sm-3  col-xs-6">
            <div class="form-group form-focus select-focus">
                <label class="control-label">Search by Contract Status</label>
                <input type="text" class="form-control floating" />
            </div>
        </div>
        <div class="col-sm-3 col-xs-6">
            <a href="#" class="btn btn-success btn-block"> Search </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped custom-table datatable">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Document No.</th>
                            <th>Document Date.</th>
                            <th>Contractor Name</th>
                            <th>Project Id</th>
                            <th>Project Name</th>
                            <th>Status</th>
                            <th>Guarantor Name</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            contractCounter++;
                            <tr>
                                <td>
                                    @contractCounter
                                </td>
                                <td>
                                    <a href="@Url.Action("ViewAwadedContracts", "Home", new { contractNumber = @item.docNo })"><strong>@Html.DisplayFor(modelItem => item.docNo)</strong></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.docNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DocDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.contractorName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.projectId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.projectName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.status)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.gurantorName)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

