@using E_Procurement.Models
@model dynamic
@{
    ViewBag.Title = "ViewPurchaseOrders";
    int tenderCounter = 0;
    int addendumcounter = 0;
    int purchaseLines = 0;
    int SecurityCounter = 0;
    int tenderDocuments = 0;
    int equipmentsCounter = 0;
    int evaluationsCunter = 0;
    int AllstaffCounter = 0;
}
<div class="content container-fluid">
    <div class="row">
        <div class="col-xs-4" style="width:100%">
            <h4 class="page-title"><strong><u>Purchase Order Details</u></strong></h4>
        </div>
    </div>
    <p>
        You can have a 360-degree view of all key details of each Purchase Contract made with the procuring entity. Some of the details you can quickily access include the General contract details, Contract
        scope, Payment terms & Installments (With related milestone), Insurance cover summary, Performance security & Advance Payment security summary, contract attachments and a list of all Order
        Releases raised against the specific purchase contract.
    </p>
    @foreach (SingleTenderModel tenderdetail in Model.SingleTenders)
    {
        <div class="row" style="background-color:#D3D3D3">
            <div class="col-xs-4">
                <h4 class="page-title"><strong><u>Purchase Order Details</u></strong></h4>
            </div>
            <div class="col-xs-8 text-right m-b-30">
                <a href="#" onclick="Respond('@Url.Action("SubmitTenderResponse", "Home", new { tendernumber = @tenderdetail.Code })','tendernumber = @tenderdetail.Code')" class="btn btn-primary pull-right rounded"><i class="fa fa-plus"></i>Apply for this Tender</a>
            </div>
        </div>
    }
    <div id="responsesfeedback" style="display: none" data-dismiss="alert"></div>
    <div class="panel-body">
        <ul class="nav nav-tabs">
            <li class="active" style="background-color:#D3D3D3">
                <a href="#tab_summary" data-toggle="tab"><p style="color:black"><strong>Order Summary</strong> </p></a>
            </li>
            <li style="background-color:#D3D3D3">
                <a href="#tab_purchase_lines" data-toggle="tab"><p style="color:black"><strong>Purchase Lines</strong></p> </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade active in" id="tab_summary">
                <h5>Below are the General Details of this Purchase Order:</h5>
                @foreach (SingleTenderModel tenderdetail in Model.SingleTenders)
                {
                    <div class="row">
                        <div class="panel panel-heading" style="background-color:#D3D3D3">
                            <h3 class="panel-title"><strong><u>Order Summary</u></strong></h3>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">No:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="tenderdescription" value="@tenderdetail.Tender_Summary" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Amount:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="tendernotice" name="tendernotice" value="@tenderdetail.Code" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Order Date:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="procurementmethod" value="@tenderdetail.Procurement_Method" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Amount Including VAT:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="invitationtype" value="@tenderdetail.Invitation_Notice_Type" readonly>
                            </div>

                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Mandatory Prebid Meeting:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="mandatorymeeting" value="@tenderdetail.Mandatory_Pre_bid_Visit_Date" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Posting Date:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="documentdate" value="@tenderdetail.Document_Date" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Vendor Invoice No:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="enveloptype" value="@tenderdetail.Bid_Envelop_Type" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Due Date:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="externaldocumentno" value="@tenderdetail.External_Document_No" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Buy From Vendor Name:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="sealedbids" value="@tenderdetail.Sealed_Bids" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Location Code:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="sealedbids" value="@tenderdetail.Sealed_Bids" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Buy From Vendor Name 2:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="sealedbids" value="@tenderdetail.Sealed_Bids" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Posting Description:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="sealedbids" value="@tenderdetail.Sealed_Bids" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Buy from Address:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="sealedbids" value="@tenderdetail.Sealed_Bids" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Payments Terms Code:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="sealedbids" value="@tenderdetail.Sealed_Bids" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Buy from Address 2:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="sealedbids" value="@tenderdetail.Sealed_Bids" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Shipment Method Code:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="sealedbids" value="@tenderdetail.Sealed_Bids" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Buy from City:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="sealedbids" value="@tenderdetail.Sealed_Bids" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Currency Code:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="sealedbids" value="@tenderdetail.Sealed_Bids" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Buy from Contact:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="sealedbids" value="@tenderdetail.Sealed_Bids" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Status:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="sealedbids" value="@tenderdetail.Sealed_Bids" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Pay to Post Code:<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="sealedbids" value="@tenderdetail.Sealed_Bids" readonly>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="tab-pane fade " id="tab_purchase_lines">
                <div class="row">
                    <div class="panel panel-heading" style="background-color:#D3D3D3">
                        <h3 class="panel-title"> <strong><u>Purchase Order Lines</u></strong></h3>
                    </div>
                    <h5>Below are the General Details of this Purchase Contract</h5>
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped custom-table datatable">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Type.</th>
                                        <th>No.</th>
                                        <th>Description</th>
                                        <th>Location</th>
                                        <th>Quantity</th>
                                        <th>Direct Unit Cost Exc VAT</th>
                                        <th>Line Amount Exc VAT</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (SingleTenderAddendumModel item in Model.TenderAddendums)
                                    {
                                        addendumcounter++;
                                        <tr>
                                            <td>
                                                @addendumcounter
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Addendum_Notice_No)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Document_Date)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Addendum_Instructions)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Addendum_Instructions)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Addendum_Instructions)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Addendum_Instructions)

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

