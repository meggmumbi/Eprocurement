@using E_Procurement.Models
@model dynamic
@{
    ViewBag.Title = "KeyPersonnelExperience";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int statetementCounter = 0;
    int detailestatementCounter = 0;
}


<div class="content container-fluid">
    <div class="row">
        <div class="col-xs-4" style="width:100%">
            <h4 class="page-title"><strong><u>Minimum Staff Qualifications & Experience Required</u></strong></h4>
        </div>
    </div>
    <p>This page displays the minimum qualifications and experience requirements for the following proposed Project role:</p>
    @foreach (VendorModel vendor in Model.Vendors)
    {
        <h4>Required Project Role</h4>
        <div class="row filter-row">
            <div class="col-sm-4 col-xs-6">
                <label class="control-label">Staff Role Code: <strong><u>@Session["vendorNo"]</u></strong></label>
            </div>
            <div class="col-sm-4 col-xs-6">
                <label class="control-label">Description: <strong><u>@vendor.Currency</u></strong></label>
            </div>
            <div class="col-sm-4 col-xs-6">
                <label class="control-label">Minimum No. of Staff Required  <strong><u>@vendor.Balance</u></strong></label>
            </div>
        </div>
    }
    <div class="panel-body">
        <ul class="nav nav-tabs">
            <li class="active" style="background-color:#D3D3D3">
                <a href="#tab_qualifications" data-toggle="tab"><p style="color:black"><strong>Minimum Qualifications</strong> </p></a>
            </li>
            <li style="background-color:#D3D3D3">
                <a href="#tab_experience" data-toggle="tab"><p style="color:black"><strong>Minimum Experience</strong></p> </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade active in" id="tab_qualifications">
                <div class="row">
                    <div class="panel panel-heading" style="background-color:#D3D3D3">
                        <h3 class="panel-title">Minimum Qualification</h3>
                    </div>
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped custom-table datatable">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Minimum Qualification Category</th>
                                        <th>Minimum Qualification Requirements</th>
                                </thead>
                                <tbody>
                                    @foreach (VendorStatementModel item in Model.Statement)
                                    {
                                        statetementCounter++;
                                        <tr>
                                            <td>
                                                @statetementCounter
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Posting_Date)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Document_Type)
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            @*//Detailed Statement*@
            <div class="tab-pane fade" id="tab_experience">
                <div class="row">
                    <div class="panel panel-heading" style="background-color:#D3D3D3">
                        <h3 class="panel-title">Minimum Experience</h3>
                    </div>
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped custom-table datatable">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Experience Category</th>
                                        <th>Minimum Experience Requirement</th>
                                        <th>Minimum Year of Experience</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (VendorStatementModel item in Model.Statement)
                                    {
                                        detailestatementCounter++;
                                        <tr>
                                            <td>
                                                @detailestatementCounter
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Posting_Date)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Document_Type)
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
