@model E_Procurement.OData.BidEquipmentSpecifications

@{
    ViewBag.Title = "EditResponseEquipmentsInject";
}
<div id="add_banks" class="modal custom-modal fade" role="dialog">
    <div class="modal-dialog">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <div class="modal-content modal-lg">
            <div class="modal-header">
                <h4 class="modal-title">Edit Equipments</h4>
            </div>
            <div class="modal-body">
                <form class="m-b-30">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Equipment Category Code: <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="bankcode" name="bankcode">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Description:</label>
                                <input class="form-control" type="text" id="bankname" name="bankname">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Ownership Type: <span class="text-danger">*</span></label>
                                @Html.Action("CountriesList", "Home")
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Equipment Serial No. <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="bankaccountno" name="bankaccountno">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Years of Previous Use:</label>
                                <input class="form-control" type="text" id="currencyCode" name="currencyCode">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Equipment Condition Code: <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="bankbranchno" name="bankbranchno">
                            </div>
                        </div>
                    </div>
                </form>
                <div class="m-t-20 text-center">
                    <button class="btn btn-primary btn_submitVendorBanks" id="btn_submitVendorBanks" name="btn_submitVendorBanks" type="button">Submit Bank Details</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Back", "Index")
</div>
