@{
    ViewBag.Title = "ChangePassword";
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">
    <title>Reset Password - Kenya Rural Roads Authority</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/CustomCss.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
</head>
<body>
    <div class="main-wrapper">
        <div class="account-page">
            <div class="container" style="height:20px">
                <h3 class="account-title">Change Password</h3>
                <div class="account-box" style="width:1020px">
                    <div class="account-wrapper">
                        <div class="account-logo">
                            <a href="/Home/Index"><img src="~/assets/img/seeklogo.png" alt="Kenya Rural Roads Authority"></a>
                        </div>
                        <div class="row">
                            <div id="passwordresetfeedback" style="display: none" data-dismiss="alert"></div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label">Enter Registered Email Address: <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="txtemailaddress" id="txtemailaddress" value="@Session["email"]">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group pass_show">
                                    <label class="control-label">Enter Old Password: <span class="text-danger">*</span></label>
                                    <input class="form-control" type="password" name="txtoldpassword" id="txtoldpassword" value="@Session["password"]">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group pass_show">
                                    <label class="control-label">Enter New Password: <span class="text-danger">*</span></label>
                                    <input type="password" class="form-control" name="txtnewpassword" id="txtnewpassword">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group pass_show">
                                    <label class="control-label">Confirm New Password: <span class="text-danger">*</span></label>
                                    <input class="form-control" type="password" name="txtconfirmnewpassword" id="txtconfirmnewpassword">
                                </div>
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <button class="btn btn-primary btn-block account-btn btn_passwordreset_Details" id="btn_passwordreset_Details" name="btn_passwordreset_Details" style="background-color:#144704" type="submit">Reset Password</button>
                        </div>
                        <div class="text-center">
                            <a href="/Home/Login">Back to Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="sidebar-overlay" data-reff="#sidebar"></div>
    <script type="text/javascript" src="~/assets/js/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/assets/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/assets/js/app.js"></script>
    <script type="text/javascript" src="~/assets/customJs/ResetPassword.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- Sweet Alert Js -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
</body>
</html>