
    @{
        var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();

        string layout = "";
        if (controller == "Home")
        {
            layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
        {
            layout = "~/Views/Shared/_ContractorLayout.cshtml";
        }

        Layout = layout;
    }

