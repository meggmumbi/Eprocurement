@model E_Procurement.Models.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">
    <title>Login - i-RMS Portal</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/material-dashboard-new.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/ladda-themeless.min.css">
</head>
<body>
    <div class="main-wrapper">
        <div class="account-page"><br />
            <div class="card"><br />
               <center>
                   <div class="card-header text-center" data-background-color="darkgreen" >
                       <h4 class="title"><i>i-RMS User Login </i></h4>
                   </div>
               </center> 
                <div class="container">
                    <div class="account-box" style="width:650px;">
                        <div class="account-wrapper">
                            <div class="account-logo">
                                <img src="~/assets/img/logo1.png" style="width:300px">
                            </div>
                            @if (TempData["error"] != null)
                            {

                                <div class="alert alert-danger" id="alert-danger" role="alert">
                                    @TempData["error"]
                                </div>

                            }
                            else if (TempData["error1"] != null)
                            {
                                <div class="alert alert-danger" id="alert-danger" role="alert">
                                    @TempData["error1"]
                                </div>
                            }
                            @using (Html.BeginForm("Login", "Contractor", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <p><strong> Enter a Valid Username or Email Address:</strong></p>
                                <div class="form-group form-focus">
                                    <label class="control-label">Username or Email</label>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control floating", @required = "required", placeholder = "Email Address.e.g.xxxxx@gmail.com" } })
                                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                                </div>
                                <p><strong> Enter a Valid Password:</strong></p>
                                <div class="form-group form-focus">
                                    <label class="control-label">Password</label>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control floating", @required = "required", type = "password", placeholder = "Password.e.g.*******************************" } })
                                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>

                                </div>
                                <div class="form-group text-center">
                                    <button class="btn btn-primary btn-block account-btn" type="submit">Login</button>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="text-center">
                                            <a href="/Contractor/ResetPassword"><strong>Forgot your password?</strong></a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="sidebar-overlay" data-reff="#sidebar"></div>
    <script type="text/javascript" src="~/assets/js/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/assets/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/assets/js/app.js"></script>
</body>
</html>
