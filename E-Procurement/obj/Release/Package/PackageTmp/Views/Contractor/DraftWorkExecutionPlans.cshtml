@model  IEnumerable<E_Procurement.Models.Contractor.WorkExecutionPlanModel>
@{
    ViewBag.Title = "DraftWorkExecutionPlans";
    int Executionplans = 0;
}

<div class="content container-fluid">
    <div class="row">
        <div class="col-xs-4" style="width:100%">
            <h5><strong><u>Draft Work Executions Plans</u></strong></h5>
        </div>
    </div>
    <div class="tab-content">
        <div class="tab-pane fade active in" id="general_details">
            <p>The following are the Draft Work Executions Plans. The Contractor can view all the published Project Commencement Orders that require your action. You are required to submit the Work Execution Plan(WEP) in response to the Project Commencement Orders.</p>
            <div class="row filter-row">
                <div class="col-sm-4 col-xs-6">
                    <div class="form-group form-focus">
                        <label class="control-label">Search by Regions</label>
                        <input type="text" class="form-control floating" />
                    </div>
                </div>
                <div class="col-sm-4 col-xs-6">
                    <div class="form-group form-focus select-focus">
                        <label class="control-label">Search by Contract No</label>
                        <input type="text" class="form-control floating" />
                    </div>
                </div>
                <div class="col-sm-4 col-xs-6">
                    <a href="#" class="btn btn-success btn-block"> Search </a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-striped custom-table datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>No.</th>
                                    <th>Order No.</th>
                                    <th>Description</th>
                                    <th>Contract No</th>
                                    <th>Project No</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Road Code</th>
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    Executionplans++;
                                    <tr>
                                        <td>
                                            @Executionplans
                                        </td>
                                        <td>
                                            <a href=""><strong>@Html.DisplayFor(modelItem => item.Document_No)</strong></a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Commencement_Order_ID)

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Purchase_Contract_ID)

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Project_ID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Project_Start_Date)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Project_End_Date)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Road_Code)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("ViewWorkExecutionPlan", "Contractor", new { ExecutionPlanNumber = @item.Document_No })" data-toggle="modal" class="btn btn-success"><i class="fa fa-eye m-r-10"></i> View</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>