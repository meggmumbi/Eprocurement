@using E_Procurement.Models.Contractor
@model dynamic
@{
    ViewBag.Title = "MyStatement";
    Layout = "~/Views/Shared/_ContractorLayout.cshtml";
    int statetementCounter = 0;
    int detailedstatetementCounter = 0;
}
<div class="content container-fluid">
    <div class="row">
        <div class="col-xs-4" style="width:100%">
            <h5><strong><u>My Statement</u></strong></h5>
        </div>
    </div>
    <p>We have empowered you to view your Balance, access the breakdown of the outstanding amount and allow you to request for your Supplier Statement..</p>
    @foreach (ContractorProfileModel vendor in Model.Vendors)
    {
        <div class="row filter-row">
            <div class="col-sm-4 col-xs-6">
                <label class="control-label">Vendor No:</label>
                <div class="form-group form-focus">
                    <input type="text" class="form-control floating" value="@Session["vendorNo"]" readonly />
                </div>
            </div>
            <div class="col-sm-4 col-xs-6">
                <label class="control-label">Currency Code</label>
                <div class="form-group form-focus select-focus">
                    <input type="text" class="form-control floating" value="@vendor.Currency" readonly />
                </div>
            </div>
            <div class="col-sm-4 col-xs-6">
                <label class="control-label">Balance(LCY)</label>
                <div class="form-group form-focus select-focus">
                    <input type="text" class="form-control floating" value="@vendor.Balance" readonly />
                </div>
            </div>
        </div>
    }
    <div class="panel-body">
        <ul class="nav nav-tabs">
            <li class="active" style="background-color:lightgray">
                <a href="#tab_statement" data-toggle="tab"><p style="color:black"><strong>Mini Statement</strong> </p></a>
            </li>
            <li style="background-color:#D3D3D3">
                <a href="#tab_detailed_statement" data-toggle="tab"><p style="color:black"><strong>Detailed Statement</strong></p> </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade active in" id="tab_statement">
                <div class="row">
                    <div class="panel panel-heading" style="background-color:lightgray">
                        <h3 class="panel-title">Mini Statement</h3>
                    </div>
                    <h5>Please find the breakdown of your Balance.</h5>
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped custom-table datatable">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Posting Date</th>
                                        <th>Document Type</th>
                                        <th>Document No.</th>
                                        <th>External Document No.</th>
                                        <th>Description</th>
                                        <th>Amount(LCY)</th>
                                        <th>Remaining Amount(LCY)</th>
                                </thead>
                                <tbody>
                                    @foreach (ContractorStatementModel item in Model.Statement)
                                    {
                                        statetementCounter++;
                                        <tr>
                                            <td>
                                                @statetementCounter
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Posting_Date)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Document_Type)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Document_No)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.External_Document_No)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Amount_LCY)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Remaining_Amt_LCY)
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            @*//Detailed Statement*@
            <div class="tab-pane fade" id="tab_detailed_statement">
                <div class="row">
                    <div class="panel panel-heading" style="background-color:#D3D3D3">
                        <h5>Request For Detailed Statement</h5>
                    </div>
                    <h5>Please find the breakdown of your Balance.</h5>
                    <div class="row filter-row">
                        <div class="col-sm-4 col-xs-6">
                            <label class="control-label"> From Date</label>
                            <div class="cal-icon">
                                <div class="form-group form-focus">
                                    <input type="text" class="form-control floating datetimepicker" />
                                </div>
                            </div>
                            </div>
                        <div class="col-sm-4 col-xs-6">
                            <label class="control-label">To Date</label>
                            <div class="cal-icon">
                                <div class="form-group form-focus">
                                    <input type="text" class="form-control floating datetimepicker" />
                                </div>
                                </div>
                            </div>
                        <div class="col-sm-4 col-xs-6">
                            <a href="#" class="btn btn-success btn-block"> Search </a>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped custom-table datatable">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Posting Date</th>
                                        <th>Document Type</th>
                                        <th>Document No.</th>
                                        <th>External Document No.</th>
                                        <th>Description</th>
                                        <th>Amount(LCY)</th>
                                        <th>Remaining Amount(LCY)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (ContractorStatementModel item in Model.Statement)
                                    {
                                        detailedstatetementCounter++;
                                        <tr>
                                            <td>
                                                @detailedstatetementCounter
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Posting_Date)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Document_Type)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Document_No)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.External_Document_No)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Amount_LCY)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Remaining_Amt_LCY)
                                            </td>

                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




