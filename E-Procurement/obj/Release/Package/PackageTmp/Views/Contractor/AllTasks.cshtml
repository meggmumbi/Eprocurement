                                        <td>
                                            @AllTasksCounter
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Job_No)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Region)
                                        </td>
                                        <td>
