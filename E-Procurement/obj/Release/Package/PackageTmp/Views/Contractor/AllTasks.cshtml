                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-striped custom-table datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Project No.</th>
                                    <th>Region Code</th>
                                    <th>Road Section</th>
                                    <th>Start Point(KMs)</th>
                                    <th>End Point(KMs)</th>
                                    <th>Surface Types</th>
                                    <th>Road Condition</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Completed Length(KMs)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ProjectTasksModel item in Model.ActiveProjectTasksDetails)
                                {
                                    AllTasksCounter++;
